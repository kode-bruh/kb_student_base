<odoo>
	<data>
		<record id="kb_class_history_list_view" model="ir.ui.view">
			<field name="name">kb_class_history_list_view</field>
			<field name="model">kb.class.history</field>
			<field name="arch" type="xml">
				<list editable="top">
					<field name="student_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
					<field name="class_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
					<field name="term_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
				</list>
			</field>
		</record>

		<record id="kb_class_history_form_view" model="ir.ui.view">
			<field name="name">kb_class_history_form_view</field>
			<field name="model">kb.class.history</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="student_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
								<field name="class_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
								<field name="term_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</odoo>