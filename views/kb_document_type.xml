<odoo>
	<data>
		<record id="kb_document_type_action" model="ir.actions.act_window">
			<field name="name">Document Types</field>
			<field name="res_model">kb.document.type</field>
			<field name="view_mode">list</field>
		</record>

		<record id="kb_document_type_list_view" model="ir.ui.view">
			<field name="name">kb_document_type_list_view</field>
			<field name="model">kb.document.type</field>
			<field name="arch" type="xml">
				<list editable="top">
					<field name="name"/>
					<field name="code"/>
					<field name="company_id" groups="base.group_multi_company"/>
				</list>
			</field>
		</record>
	</data>
</odoo>