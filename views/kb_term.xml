<odoo>
	<data>
		<record id="kb_term_action" model="ir.actions.act_window">
			<field name="name">Terms</field>
			<field name="res_model">kb.term</field>
			<field name="view_mode">list</field>
		</record>

		<record id="kb_term_list_view" model="ir.ui.view">
			<field name="name">kb_term_list_view</field>
			<field name="model">kb.term</field>
			<field name="arch" type="xml">
				<list editable="top">
					<field name="start_year"/>
					<field name="end_year"/>
					<field name="company_id" groups="base.group_multi_company"/>
				</list>
			</field>
		</record>
	</data>
</odoo>